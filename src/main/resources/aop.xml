<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
    xmlns:aop="http://www.springframework.org/schema/aop"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
       http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd
       http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop-3.2.xsd"
	default-lazy-init="true">

	<context:annotation-config />
	<!--<context:component-scan base-package="com.keke.crm.*" />-->


    <bean id="audience" class="afred.demo.spring.aop.Audience"/>

    <bean id="performer" class="afred.demo.spring.aop.Performer"/>

    <bean id="magician" class="afred.demo.spring.aop.Magician" />

    <bean id="volunteer" class="afred.demo.spring.aop.Volunteer" />

    <aop:config>
        <aop:aspect ref="audience">

            <aop:before method="takeSeats" pointcut="execution(* afred.demo.spring.aop.Performer.perform(..))"/>
            <aop:before method="turnOffCellPhones" pointcut="execution(* afred.demo.spring.aop.Performer.perform(..))"/>
            <aop:after-returning method="applaund" pointcut="execution(* afred.demo.spring.aop.Performer.perform(..))"/>
            <aop:before method="demandRefund" pointcut="execution(* afred.demo.spring.aop.Performer.perform1(..)) and args(name)" arg-names="name"/>


            <aop:around method="watchPerformance" pointcut="execution(* afred.demo.spring.aop.Performer.doPerform(..))" />

        </aop:aspect>

        <!--<aop:aspect ref="magician">-->
                <!--<aop:pointcut id="thinking" expression="execution(* afred.demo.spring.aop.Thinker.thinkOfSomething(String)) and args(thoughts)" />-->

            <!--<aop:before method="interceptThoughts" pointcut-ref="thinking" arg-names="thoughts" />-->

        <!--</aop:aspect>-->

    </aop:config>

</beans>